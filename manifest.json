{
  "manifest_version": 3,
  "name": "Twinmind Transciber extension",
  "version": "0.1",
  "description": "Allows user to capture audio from browser tabs and provide real-time transcription with a user-friendly interactive sidepanel",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "optional_permissions": [],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://speech.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "https://api.fireworks.ai/*",
    "https://*.googleapis.com/",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Real-Time Audio Transcript",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "sidepanel.js",
        "sidepanel.css",
        "langchain-integration.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
